<Window
    x:Class="PharmaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PharmaApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KhaptaPharma Gestion"
    Width="1286"
    Height="628"
    Background="#FF303030"
    mc:Ignorable="d">
    <Window.Resources>
        <Color x:Key="GradientStopColor1">#FF343434</Color>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="157*" />
            <RowDefinition Height="529*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="688*" />
            <ColumnDefinition Width="327*" />
        </Grid.ColumnDefinitions>
        <Image
            Margin="0,0,5,10"
            Source="/Khapta-Logo.png"
            Stretch="Uniform"
            StretchDirection="Both" />
        <Rectangle
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,6,10,15"
            Stroke="White"
            StrokeThickness="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.937" Color="#FF0C110D" />
                    <GradientStop Offset="0" Color="#FF217C2D" />
                    <GradientStop Offset="0.267" Color="#FF173A1C" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="9,10,10,10"
            Stroke="White"
            StrokeThickness="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="#FFAA0000" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Height="34"
            Margin="10,6,10,0"
            VerticalAlignment="Top"
            Content="Création autorisation"
            FontSize="22"
            FontWeight="Bold"
            Foreground="White" />
        <ComboBox x:Name="maladieSelectorCreate"
            Grid.Row="1"
            Grid.Column="2"
            Height="27"
            Margin="21,86,21,0"
            VerticalAlignment="Top"
            DisplayMemberPath="libelleMaladie"  />
        <DatePicker x:Name="dateSelectorCreate"
            Grid.Row="1"
            Grid.Column="2"
            Height="29"
            Margin="21,154,21,0"
            VerticalAlignment="Top"
            BorderBrush="{x:Null}" />
        <TextBox x:Name="commentBoxCreate"
            Grid.Row="1"
            Grid.Column="2"
            Height="100"
            Margin="21,216,21,0"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="61"
            Margin="18,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Maladie"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="18,120,208,0"
            VerticalAlignment="Top"
            Content="Date"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="169"
            Margin="18,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Commentaire (optionnel)"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <ComboBox x:Name="medSelectorCreate"
            Grid.Row="1"
            Grid.Column="2"
            Height="27"
            Margin="21,347,21,0"
            VerticalAlignment="Top" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="92"
            Margin="21,318,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Médicament"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Button x:Name="buttonCreate"
            Grid.Row="1"
            Grid.Column="2"
            Height="29"
            Margin="24,0,18,23"
            VerticalAlignment="Bottom"
            Background="#FF00A635"
            BorderBrush="White"
            BorderThickness="2"
            Content="Créer"
            FontWeight="Bold"
            Foreground="White" />
        <TabControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,10,0,15">
            <TabItem Header="Autorisations">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF162E42" />
                            <GradientStop Offset="1" Color="#FF326187" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="254*" />
                        <ColumnDefinition Width="689*" />
                    </Grid.ColumnDefinitions>
                    <ListView
                        x:Name="listViewTri"
                        Margin="10,66,10,10"
                        BorderBrush="#FF908282"
                        FontWeight="Bold"
                        Foreground="#FFC6302C">
                        <ListView.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0.87" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </ListView.Background>
                        <!--
                        <ListView.View>
                            <GridView>
                                <GridViewColumn x:Name="listViewCol" />
                            </GridView>
                        </ListView.View>
                        -->
                    </ListView>
                    <DataGrid
                        x:Name="grdData"
                        Grid.Column="1"
                        Margin="10,10,10,10"
                        Foreground="Black" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Maladie" Binding="{Binding idMaladie}" />
                            <DataGridTextColumn Header="Date" Binding="{Binding idDate}" />
                            <DataGridTextColumn Header="Medicament" Binding="{Binding idMedicament}" />
                            <DataGridTextColumn Header="Commentaire" Binding="{Binding commentaire}" />
                        </DataGrid.Columns>
                        <DataGrid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </DataGrid.Background>
                    </DataGrid>
                    <ComboBox
                        Height="27"
                        Margin="10,31,10,0"
                        VerticalAlignment="Top"
                        Panel.ZIndex="-4">
                        <ComboBoxItem x:Name="ttElementsItem" IsSelected="True" Selected="ttElementsItem_Selected">Tous les éléments</ComboBoxItem>
                        <ComboBoxItem x:Name="catMedItem" Selected="catMedItem_Selected">Catégorie de Medicament</ComboBoxItem>
                        <ComboBoxItem x:Name="maladieItem" Selected="maladieItem_Selected">Maladie</ComboBoxItem>
                        <ComboBoxItem x:Name="medItem">Médicament</ComboBoxItem>
                    </ComboBox>
                    <Label
                        Height="29"
                        Margin="10,2,183,0"
                        VerticalAlignment="Top"
                        Content="Tri par"
                        FontSize="14"
                        FontStyle="Italic"
                        FontWeight="SemiBold"
                        Foreground="White" />
                </Grid>
            </TabItem>
            <TabItem Header="Recherche">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF1D1002" />
                            <GradientStop Offset="1" Color="#FFFF8000" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <TextBox
                        x:Name="searchTextBox"
                        Width="394"
                        Height="36"
                        Margin="0,22,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="White"
                        Cursor=""
                        FontSize="22"
                        FontWeight="Bold"
                        SelectionBrush="#FFF90000"
                        TextWrapping="Wrap" />
                    <DataGrid Margin="10,80,10,10" Foreground="White">
                        <DataGrid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </DataGrid.Background>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Edition">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF060000" />
                            <GradientStop Offset="1" Color="#FF9D0000" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <DataGrid Margin="10,10,10,39" Foreground="White">
                        <DataGrid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </DataGrid.Background>
                    </DataGrid>
                    <Button
            Height="29"
            Margin="0,0,10,5"
            VerticalAlignment="Bottom"
            Background="#FF006AA6"
            BorderBrush="White"
            BorderThickness="2"
            Content="Enregistrer"
            FontWeight="Bold"
            Foreground="White" HorizontalAlignment="Right" Width="188" />
                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="timeLabel" Content="00:00" Grid.Column="2" Margin="0,36,21,36" FontSize="48" Foreground="Red" FontFamily="OCR A Std" FontWeight="Normal" HorizontalAlignment="Right" Width="183"/>

    </Grid>
</Window>
