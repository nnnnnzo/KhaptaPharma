<Window
    x:Class="PharmaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PharmaApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KhaptaPharma Gestion"
    Width="1286"
    Height="628"
    Background="#FF303030"
    mc:Ignorable="d">
    <Window.Resources>
        <Color x:Key="GradientStopColor1">#FF343434</Color>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="157*" />
            <RowDefinition Height="529*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="688*"/>
            <ColumnDefinition Width="327*" />
        </Grid.ColumnDefinitions>
        <Image
            Margin="0,0,5,10"
            Source="/Khapta-Logo.png"
            Stretch="Uniform"
            StretchDirection="Both" />
        <Rectangle
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,6,10,15"
            Stroke="White"
            StrokeThickness="2" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0C110D" Offset="0.937"/>
                    <GradientStop Color="#FF217C2D" Offset="0"/>
                    <GradientStop Color="#FF173A1C" Offset="0.267"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Grid.ColumnSpan="2"
            Margin="9,10,10,10"
            Stroke="White"
            StrokeThickness="2" Grid.Column="1" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFAA0000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Height="34"
            Margin="10,6,10,0"
            VerticalAlignment="Top"
            Content="Création autorisation"
            FontSize="22"
            FontWeight="Bold"
            Foreground="White" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="2"
            Height="27"
            Margin="21,86,21,0"
            VerticalAlignment="Top">
            <ComboBoxItem>La zoubinette</ComboBoxItem>
        </ComboBox>
        <DatePicker
            Grid.Row="1"
            Grid.Column="2"
            Height="29"
            Margin="21,154,21,0"
            VerticalAlignment="Top" BorderBrush="{x:Null}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Height="100"
            Margin="21,216,21,0"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="61"
            Margin="18,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Maladie"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="18,120,208,0"
            VerticalAlignment="Top"
            Content="Date"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="169"
            Margin="18,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Commentaire (optionnel)"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="2"
            Height="27"
            Margin="21,347,21,0"
            VerticalAlignment="Top" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="92"
            Margin="21,318,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Médicament"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Height="29"
            Margin="24,0,18,23"
            VerticalAlignment="Bottom"
            Background="#FF00A635"
            Content="Créer"
            FontWeight="Bold"
            Foreground="White" BorderBrush="White" BorderThickness="2" />
        <TabControl Margin="10,10,0,15" Grid.Row="1" Grid.ColumnSpan="2">
            <TabItem Header="Autorisations">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF162E42"/>
                            <GradientStop Color="#FF326187" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="254*"/>
                        <ColumnDefinition Width="689*"/>
                    </Grid.ColumnDefinitions>
                    <ListView Margin="10,66,10,10">
                        <ListView.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0.87" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </ListView.Background>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DataGrid
            Margin="10,10,10,10"
            Foreground="White" Grid.Column="1">
                        <DataGrid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </DataGrid.Background>
                    </DataGrid>
                    <ComboBox
                        Margin="10,31,10,0" Height="27" VerticalAlignment="Top" Panel.ZIndex="-4">
                        <ComboBoxItem IsSelected="True">Tous les éléments</ComboBoxItem>
                        <ComboBoxItem>Catégorie de Maladie</ComboBoxItem>
                        <ComboBoxItem>Maladie</ComboBoxItem>
                        <ComboBoxItem>Médicament</ComboBoxItem>
                    </ComboBox>
                    <Label
            Margin="10,2,183,0"
            Content="Tri par"
            FontSize="14"
            FontStyle="Italic"
            FontWeight="SemiBold"
            Foreground="White" Height="29" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem Header="Recherche">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF1D1002"/>
                            <GradientStop Color="#FFFF8000" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <TextBox x:Name="searchTextBox" HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="36" Cursor="" FontSize="22" FontWeight="Bold" SelectionBrush="#FFF90000" Background="White"/>
                    <DataGrid
            Margin="20,80,19,27"
            Foreground="White">
                        <DataGrid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Offset="0" Color="{DynamicResource GradientStopColor1}" />
                            </LinearGradientBrush>
                        </DataGrid.Background>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
