<Window x:Class="PharmaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmaApp"
        mc:Ignorable="d"
        Title="KhaptaPharma Gestion" Height="450" Width="800" Background="#FFF5F5EF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Fotoram.io(2).jpg" Stretch="Uniform" HorizontalAlignment="Left" Width="226" Height="90" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <ListView Margin="18,6,18,15" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Action" Grid.Column="1" HorizontalAlignment="Right" Margin="0,11,168,0" VerticalAlignment="Top" Height="67" Width="74">
            <Button.Background>
                <ImageBrush ImageSource="/pill-line.png"/>
            </Button.Background>
        </Button>
        <Button Content="" Grid.Column="1" HorizontalAlignment="Right" Margin="0,11,89,0" VerticalAlignment="Top" Height="67" Width="74">
            <Button.Background>
                <ImageBrush ImageSource="/pill-line.png" TileMode="None"/>
            </Button.Background>
        </Button>
        <Button Content="Action" Grid.Column="1" Margin="0,11,10,0" HorizontalAlignment="Right" Width="74" Height="67" VerticalAlignment="Top"/>
        <DataGrid Grid.Column="1" Grid.Row="1" Margin="10,6,10,15"/>

    </Grid>
</Window>
